block content
    table
        thead
            tr
                th ID
                th Title
                th Year
                th
                th
        tbody
            each movie in movies
                tr
                    td= movie.id
                    td= movie.title
                    td= movie.year
                    td
                        a(href="/movies/delete/" + movie.id) delete
                    td
                        a(href="/movies/form/" + movie.id) edit
